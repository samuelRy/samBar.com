RewriteEngine On

# Don't rewrite if file is CSS, JS, JPG, PNG, SVG, etc.
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpe?g|svg|gif|ico)$ [NC]

# Remove trailing slash (except root)
RewriteCond %{REQUEST_URI} ^(.+)/+$ [NC]
RewriteRule ^ %1 [R=301,L]

# Allow existing files and directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Rewrite /something to /something.php
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]

# Optional: handle trailing slashes like /login/
RewriteRule ^([a-zA-Z0-9_-]+)/$ $1.php [L]


